<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dynamic_detail_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="10dp">

        <ViewFlipper
            android:id="@+id/dynamic_detail_title_title"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textColor="@color/white"/>

        </ViewFlipper>

        <ImageView
            android:id="@+id/dynamic_detail_title_extraicon"
            android:layout_width="12dp"
            android:layout_height="19dp"
            android:layout_toStartOf="@+id/dynamic_detail_title_title"
            android:rotation="90"
            android:src="@drawable/icon_extra" />

        <ImageView
            android:id="@+id/dynamic_detail_title_extraicon2"
            android:layout_width="12dp"
            android:layout_height="19dp"
            android:layout_toEndOf="@+id/dynamic_detail_title_title"
            android:rotation="270"
            android:src="@drawable/icon_extra" />

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/dynamic_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dynamic_detail_title_layout" />

    <LinearLayout
        android:id="@+id/dynamic_detail_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dynamic_detail_title_layout"
        android:background="?android:attr/colorBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="33dp">

        <ImageView
            android:id="@+id/dynamic_detail_loading_img"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:padding="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中. . ."
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dynamic_detail_noweb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dynamic_detail_title_layout"
        android:background="?android:attr/colorBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="33dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:padding="6dp"
            android:src="@drawable/img_noweb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载失败\n可能是没有网络？"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dynamic_detail_nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dynamic_detail_title_layout"
        android:background="?android:attr/colorBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="33dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:padding="6dp"
            android:src="@drawable/img_noweb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  什么都没找到..."
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>