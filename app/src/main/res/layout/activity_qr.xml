<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/qr_title_layout"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:onClick="loginTitle"
            android:paddingBottom="4dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/qr_title_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="播放"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/qr_title_extraicon"
                android:layout_width="12dp"
                android:layout_height="19dp"
                android:layout_marginLeft="2dp"
                android:layout_toLeftOf="@+id/qr_title_title"
                android:rotation="90"
                android:src="@drawable/icon_extra" />

        </RelativeLayout>

        <TextView
            android:id="@+id/qr_tip1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qr_title_layout"
            android:gravity="center"
            android:text="  下一版本就更视频播放。。"
            android:textColor="@color/mainColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/qr_qr"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_below="@id/qr_tip1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_qrloading"/>

        <TextView
            android:id="@+id/qr_tip2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qr_qr"
            android:layout_centerHorizontal="false"
            android:gravity="center"
            android:text="打开哔哩哔哩客户端 - 扫一扫"
            android:textColor="@color/mainColor"
            android:textSize="12sp" />


    </RelativeLayout>

</ScrollView>