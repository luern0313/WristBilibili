<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fme_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/fme_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="关注我"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/fme_title_extraicon"
            android:layout_width="12dp"
            android:layout_height="19dp"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/fme_title_title"
            android:rotation="90"
            android:src="@drawable/icon_extra" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fme_title_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="26dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="↓ ↓ 来个关注~ ↓ ↓"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fme_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="7dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/fme_card_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fme_card_head"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/img_temp" />

                    <TextView
                        android:id="@+id/fme_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_toRightOf="@+id/fme_card_head"
                        android:text="luern0313"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fme_card_lv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fme_card_name"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/fme_card_head"
                        android:background="@drawable/shape_lvbg_fme"
                        android:paddingBottom="1dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="1dp"
                        android:text="LV6"
                        android:textColor="@color/gray_44"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/fme_card_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fme_card_name"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toRightOf="@+id/fme_card_lv"
                        android:text=""
                        android:textColor="@color/gray_44"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/fme_card_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/shape_anre_followbg"
                        android:paddingBottom="4dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="4dp"
                        android:text="+关注"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="↓ ↓ 最新投稿 ↓ ↓"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/fme_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="7dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants">

                <ImageView
                    android:id="@+id/fme_video_img"
                    android:layout_width="68dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_default_vid" />

                <TextView
                    android:id="@+id/fme_video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/fme_video_img"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="请稍后..."
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fme_vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tipBG"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center_horizontal"
                    android:text="这个视频参加了“互动游戏开发大赛”，点击按钮为这个作品投一票~\n（之后一定要去亲自玩玩看！）"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/fme_vote_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_anre_followbg"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:text="+1 票"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fme_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="2dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fme_star_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@drawable/img_fme_star_no" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center_horizontal"
                    android:text="给这个互动视频五星~"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fme_lc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/fme_like"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/fme_like_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_like_no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="给这个视频点赞"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fme_coin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/fme_coin_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_coin_no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="给这个视频投币"
                        android:textSize="11sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/fme_nologin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fme_title_layout"
        android:layout_centerInParent="true"
        android:background="?android:attr/colorBackground"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_videonotfound" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="你还没登录. . ." />
    </LinearLayout>

</RelativeLayout>