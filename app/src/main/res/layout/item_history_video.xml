<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_history_video_lay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="1dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="1dp">

    <ImageView
        android:id="@+id/item_history_video_img"
        android:layout_width="68dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_vid" />

    <ProgressBar
        android:id="@+id/item_history_video_pro"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="68dp"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/item_history_video_img"
        android:layout_marginBottom="-2dp"
        android:progressDrawable="@drawable/layer_wl_progress"
        android:progress="60"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/item_history_video_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_history_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorTitle"
            android:textSize="12sp"
            tools:text="标题" />

        <TextView
            android:id="@+id/item_history_video_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textSize="10sp"
            tools:text="时间" />

        <TextView
            android:id="@+id/item_history_video_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            tools:text="UP主" />

    </LinearLayout>
</RelativeLayout>